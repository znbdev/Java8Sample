<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define the log output directory -->
    <property name="LOG_DIR" value="logs" />
    <!-- Define the log file name -->
    <property name="LOG_FILE" value="${LOG_DIR}/application.log" />

    <!-- Console appender for logging to the console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Define the log pattern for console output -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for logging to a file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- Log file path -->
        <file>${LOG_FILE}</file>
        <encoder>
            <!-- Define the log pattern for file output -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define the logging level -->
    <root level="INFO">
        <!-- Attach the console appender -->
        <appender-ref ref="CONSOLE" />
        <!-- Attach the file appender -->
        <appender-ref ref="FILE" />
    </root>
</configuration>
